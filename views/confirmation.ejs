<body>
  <header>
    <nav class="navbar navbar-light bg-light">
      <a class="navbar-brand" href="/order">
        <img src="/docs/4.5/assets/brand/bootstrap-solid.svg" width="30" height="30" class="d-inline-block align-top"
          alt="" loading="lazy">
        Sushi Restaurant
      </a>
    </nav>
  </header>

  <main>

    <!-- testing my EJS rendering of data from /menu post/ inserted in the below-->
    <!-- <div>
      <p>Name: <%= orderdata.inputName %></p>
      <p>Email: <%= orderdata.inputEmail %></p>
      <p>Phone: <%= orderdata.inputPhone %></p>
      <p>Address: <%= orderdata.inputAddress %></p>
      <p>City: <%= orderdata.inputCity %></p>
      <p>Province: <%= orderdata.inputProvince %></p>
      <p>Postal Code: <%= orderdata.inputPostalCode %></p>
      <p>Items Ordered:</p>
      <p>Additional Order Details: <%= orderdata.inputTextarea %></p>
      <p>Price Breakdown:</p>
      <p></p>
    </div> -->

    <div class="container py-2" id="orderConfirmationForm">
      <div class="row">
        <div class="col">
          <form>

            <div class="form-row py-2">
              <div class="col">
                <div class="col">
                  <label for="inputFirstName">First Name</label>
                </div>
                <div class="col">
                  <li class="list-group-item" id="inputFirstName"><%= orderdata.inputFirstName %></li>
                </div>
              </div>

              <div class="col">
                <div class="col">
                  <label for="inputLastName">Last Name</label>
                </div>
                <div class="col">
                  <li class="list-group-item" id="inputLastName"><%= orderdata.inputLastName %></li>
                </div>
              </div>
            </div>


            <div class="form-row py-2">
              <div class="col">
                <div class="col">
                  <label for="inputEmail">Email</label>
                </div>
                <div class="col">
                  <li class="list-group-item" id="inputEmail"><%= orderdata.inputEmail %></li>
                </div>
              </div>

              <div class="col">
                <div class="col">
                  <label for="inputPhone">Phone</label>
                </div>
                <div class="col">
                  <li class="list-group-item" id="inputPhone"><%= orderdata.inputPhone %></li>
                </div>
              </div>
            </div>


            <div class="form-row py-2">
              <div class="col">
                <div class="col">
                  <label for="inputAddress">Address</label>
                </div>
                <div class="col">
                  <li class="list-group-item" id="inputAddress"><%= orderdata.inputAddress %></li>
                </div>
              </div>

              <div class="col">
                <div class="col">
                  <label for="inputCity">City</label>
                </div>
                <div class="col">
                  <li class="list-group-item" id="inputCity"><%= orderdata.inputCity %></li>
                </div>
              </div>
            </div>


            <div class="form-row py-2">
              <div class="col">
                <div class="col">
                  <label for="inputProvince">Province</label>
                </div>
                <div class="col">
                  <li class="list-group-item" id="inputProvince"><%= orderdata.inputProvince %></li>
                </div>
              </div>

              <div class="col">
                <div class="col">
                  <label for="inputPostalCode">Postal Code</label>
                </div>
                <div class="col">
                  <li class="list-group-item" id="inputPostalCode"><%= orderdata.inputPostalCode %></li>
                </div>
              </div>
            </div>

            <div class="form-row py-2">
              <div class="col">
                <label for="itemsOrderedTextArea">Items Ordered</label>
              </div>
              <div class="col-12">
                <ul class="list-group-item list-group-flush" id="itemsOrderedTextArea">
                  <li class="list-group-item">Item 1 (pulled from different database)</li>
                  <li class="list-group-item">Item 2 (pulled from different database)</li>
                  <li class="list-group-item">Item 3 (pulled from different database)</li>
                  <li class="list-group-item">Item 4 (pulled from different database)</li>
                  <li class="list-group-item">Item 5 (pulled from different database)</li>
                </ul>
              </div>
            </div>


            <div class="form-row py-2">
              <div class="col">
                <label for="additionalOrderDetailsTextArea">Additional Order Details</label>
              </div>
              <div class="col-12">
                <ul class="list-group-item list-group-flush" id="additionalOrderDetailsTextArea">
                  <li class="list-group-item"><%= orderdata.inputTextarea %></li>
                </ul>
              </div>
            </div>

            <div class="form-row py-2">
              <div class="col">
                <label for="priceBreakdownTextArea">Price Breakdown</label>
              </div>
              <div class="col-12">
                <ul class="list-group-item list-group-flush" id="priceBreakdownTextArea">
                  <li class="list-group-item">
                    <div class="row">
                      <div class="col-4">Subtotal</div>
                      <div class="col">$100 (pulled from different database)</div>
                    </div>
                  </li>
                  <li class="list-group-item">
                    <div class="row">
                      <div class="col-4">Tax</div>
                      <div class="col">$5 (pulled from different database)</div>
                    </div>
                  </li>
                  <li class="list-group-item">
                    <div class="row">
                      <div class="col-4">Order Total</div>
                      <div class="col">$105 (pulled from different database)</div>
                    </div>
                  </li>
                </ul>
              </div>
            </div>

          </form>
        </div>
      </div>
    </div>


  </main>
  <footer>
    <nav class="navbar fixed-bottom navbar-light bg-light">
      <div class="leftfooterbutton">
        <div><a class="navbar-brand" id="estimatedtime">Estimated Time for Pick Up</a></div>
        <div class="leftfootercounter">Hello Test</div>
      </div>
      <!-- <input value = "Contact Us at 604-310-1010" class="btn btn-primary"></input> -->
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#contactUsButton">
        Contact Us
      </button>

      <!-- Modal -->
      <div class="modal fade" id="contactUsButton" tabindex="-1" role="dialog" aria-labelledby="contactUsButtonLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="contactUsButtonLabel">Contact Us</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <p>For questions about your order, please call 604-310-1010 for assistance. Thank you!</p>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
    </nav>
  </footer>
</body>


</html>
